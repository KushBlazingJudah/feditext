CREATE TABLE IF NOT EXISTS posts(
	id INTEGER PRIMARY KEY AUTOINCREMENT,
	thread INTEGER,

	name TEXT,
	tripcode TEXT,
	date INTEGER,
	options TEXT,
	content TEXT,

	source TEXT
);

CREATE TABLE IF NOT EXISTS auditlog(
	id INTEGER PRIMARY KEY ASC,

	type INTEGER,
	date INTEGER,

	author TEXT,
	post INTEGER,
	reason INTEGER
);
